<h1>Listing pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Data nascimento</th>
      <th>Sexo</th>
      <th>Estado civil</th>
      <th>Profissao</th>
      <th>Trabalha</th>
      <th>Tipo sanguineo</th>
      <th>Fumante</th>
      <th>Etilista</th>
      <th>Cirurgias</th>
      <th>Doencas paternas</th>
      <th>Doencas maternas</th>
      <th>Historico peso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nome %></td>
        <td><%= paciente.email %></td>
        <td><%= paciente.telefone %></td>
        <td><%= paciente.data_nascimento %></td>
        <td><%= paciente.sexo %></td>
        <td><%= paciente.estado_civil %></td>
        <td><%= paciente.profissao %></td>
        <td><%= paciente.trabalha %></td>
        <td><%= paciente.tipo_sanguineo %></td>
        <td><%= paciente.fumante %></td>
        <td><%= paciente.etilista %></td>
        <td><%= paciente.cirurgias %></td>
        <td><%= paciente.doencas_paternas %></td>
        <td><%= paciente.doencas_maternas %></td>
        <td><%= paciente.historico_peso %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

