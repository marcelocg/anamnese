<div class="form-inputs">
  <%= f.input :nome, input_html: { size: "30" } %>
  <%= f.input :email, input_html: { size: "30" } %>
  <%= f.input :telefone, as: :tel %>
  <%= f.input :data_nascimento, as: :date, start_year: Date.today.year - 10,
              end_year: Date.today.year - 85, discard_day: true,
              order: [:month, :year] %>     
  <%= f.input :estado_civil, as: :select, collection: [:solteiro, :casado, :separado, :viuvo] %>
  <%= f.input :profissao, input_html: { size: "30" } %>
  <%= f.input :sangue %>
  <div class="form-group">
    <%= f.label :mulher %>
    <%= f.input_field :sexo, as: :boolean, checked_value: "F", unchecked_value: "M",boolean_style: :inline %>
    <%= f.label :trabalha %>
    <%= f.input_field :trabalha, as: :boolean, boolean_style: :inline %>
    <%= f.label :fuma %>
    <%= f.input_field :fumante, as: :boolean, boolean_style: :inline %>
    <%= f.label :bebe %>
    <%= f.input_field :etilista, as: :boolean, boolean_style: :inline %>
  </div>
</div>
